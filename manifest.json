{
  "manifest_version": 3,
  "name": "explabel",
  "version": "0.1.0",
  "description": "Label addresses on explorers locally.",
  "action": { "default_popup": "popup.html" },
  "permissions": ["storage", "scripting"],
  "host_permissions": [
    "*://app.roninchain.com/*",
    "*://etherscan.io/*", "*://*.etherscan.io/*",
    "*://bscscan.com/*", "*://*.bscscan.com/*",
    "*://arbiscan.io/*", "*://*.arbiscan.io/*",
    "*://polygonscan.com/*", "*://*.polygonscan.com/*",
    "*://basescan.org/*", "*://*.basescan.org/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://app.roninchain.com/*",
        "*://etherscan.io/*", "*://*.etherscan.io/*",
        "*://bscscan.com/*", "*://*.bscscan.com/*",
        "*://arbiscan.io/*", "*://*.arbiscan.io/*",
        "*://polygonscan.com/*", "*://*.polygonscan.com/*",
        "*://basescan.org/*", "*://*.basescan.org/*"
      ],
      "js": ["utils.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
